<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || 'Ticket Bot' %></title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-950 text-slate-100 min-h-screen">
  <nav class="bg-slate-900/80 sticky top-0 border-b border-slate-800">
    <div class="mx-auto max-w-4xl px-4 py-3 flex items-center justify-between">
      <div class="font-bold">🎟️ Ticket Bot</div>
      <div class="space-x-4">
        <a href="/" class="hover:underline">Home</a>
        <a href="/dashboard" class="hover:underline">Dashboard</a>
        <% if (typeof loggedIn !== 'undefined' && loggedIn) { %>
          <a href="/logout" class="hover:underline text-red-300">Logout</a>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="mx-auto max-w-4xl px-4 py-6">
    <%- body %>
  </main>

  <footer class="mx-auto max-w-4xl px-4 pb-8 text-sm text-slate-400">
    <p><%= appName || 'Ticket Bot' %> · Health: <a class="underline" href="/health">/health</a></p>
  </footer>
</body>
</html>
